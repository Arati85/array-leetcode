#include <iostream>
#include <vector>
using namespace std;

// 1️⃣ Factorial using recursion
int factorial(int n) {
    if (n <= 1) return 1;
    return n * factorial(n - 1);
}

// 2️⃣ Power of a number (a^b)
int power(int a, int b) {
    if (b == 0) return 1;
    return a * power(a, b - 1);
}

// 3️⃣ Print numbers in increasing order
void printIncreasing(int n) {
    if (n == 0) return;
    printIncreasing(n - 1);
    cout << n << " ";
}

// Print numbers in decreasing order
void printDecreasing(int n) {
    if (n == 0) return;
    cout << n << " ";
    printDecreasing(n - 1);
}

// Print numbers in Decreasing then Increasing pattern
void printDecInc(int n) {
    if (n == 0) return;
    cout << n << " ";       // decreasing part
    printDecInc(n - 1);
    cout << n << " ";       // increasing part
}

// 4️⃣ Count digits using recursion
int countDigits(int n) {
    if (n == 0) return 0;
    return 1 + countDigits(n / 10);
}

// 5️⃣ Sum of array elements using recursion
int sumArray(vector<int>& arr, int n) {
    if (n == 0) return 0;
    return arr[n - 1] + sumArray(arr, n - 1);
}

int main() {
    int choice;
    cout << "Choose an operation:\n";
    cout << "1. Factorial\n";
    cout << "2. Power\n";
    cout << "3. Print Increasing, Decreasing, Decreasing-Increasing\n";
    cout << "4. Count Digits\n";
    cout << "5. Sum of Array\n";
    cout << "Enter choice: ";
    cin >> choice;

    switch (choice) {
        case 1: {
            int n;
            cout << "Enter number: ";
            cin >> n;
            cout << "Factorial = " << factorial(n) << endl;
            break;
        }
        case 2: {
            int a, b;
            cout << "Enter base and exponent: ";
            cin >> a >> b;
            cout << "Power = " << power(a, b) << endl;
            break;
        }
        case 3: {
            int n;
            cout << "Enter n: ";
            cin >> n;
            cout << "\nIncreasing Order: ";
            printIncreasing(n);
            cout << "\nDecreasing Order: ";
            printDecreasing(n);
            cout << "\nDecreasing-Increasing: ";
            printDecInc(n);
            cout << endl;
            break;
        }
        case 4: {
            int n;
            cout << "Enter number: ";
            cin >> n;
            cout << "Number of digits = " << (n == 0 ? 1 : countDigits(n)) << endl;
            break;
        }
        case 5: {
            int size;
            cout << "Enter array size: ";
            cin >> size;
            vector<int> arr(size);
            cout << "Enter array elements: ";
            for (int i = 0; i < size; i++) cin >> arr[i];
            cout << "Sum of array = " << sumArray(arr, size) << endl;
            break;
        }
        default:
            cout << "Invalid choice!" << endl;
    }

    return 0;
}
