#include <iostream>
#include <vector>
using namespace std;

 FIND PIVOT INDEX

int pivotIndex(vector<int>& nums) {
    int total = 0, leftSum = 0;
    for (int x : nums) total += x;
    for (int i = 0; i < nums.size(); i++) {
        if (leftSum == total - leftSum - nums[i])
            return i;
        leftSum += nums[i];
    }
    return -1;
}

int main1() {
    cout << "FIND PIVOT INDEX\n";
    int n;
    cout << "Enter size of array: ";
    cin >> n;
    vector<int> nums(n);
    cout << "Enter array elements: ";
    for (int i = 0; i < n; i++) cin >> nums[i];
    cout << "Pivot Index: " << pivotIndex(nums) << endl;
    return 0;
}
 REMOVE DUPLICATES FROM SORTED ARRAY

int removeDuplicates(vector<int>& nums) {
    if (nums.empty()) return 0;
    int j = 0;
    for (int i = 1; i < nums.size(); i++) {
        if (nums[i] != nums[j]) {
            j++;
            nums[j] = nums[i];
        }
    }
    return j + 1;
}

int main2() {
    cout << "\nREMOVE DUPLICATES FROM SORTED ARRAY\n";
    int n;
    cout << "Enter size of sorted array: ";
    cin >> n;
    vector<int> nums(n);
    cout << "Enter sorted array elements: ";
    for (int i = 0; i < n; i++) cin >> nums[i];
    int newLength = removeDuplicates(nums);
    cout << "Array after removing duplicates: ";
    for (int i = 0; i < newLength; i++) cout << nums[i] << " ";
    cout << endl;
    return 0;
}
 FIBONACCI NUMBER (RECURSION)

int fibonacci(int n) {
    if (n <= 1)
        return n;
    return fibonacci(n - 1) + fibonacci(n - 2);
}

int main3() {
    cout << "\nFIBONACCI NUMBER (RECURSION)\n";
    int n;
    cout << "Enter n: ";
    cin >> n;
    cout << "Fibonacci(" << n << ") = " << fibonacci(n) << endl;
    return 0;
}
 TOWER OF HANOI (WITH RECURSION TREE)

void towerOfHanoi(int n, char from, char to, char aux) {
    if (n == 1) {
        cout << "Move disk 1 from " << from << " -> " << to << endl;
        return;
    }
    towerOfHanoi(n - 1, from, aux, to);
    cout << "Move disk " << n << " from " << from << " -> " << to << endl;
    towerOfHanoi(n - 1, aux, to, from);
}

int main4() {
    cout << "\nTOWER OF HANOI (RECURSION)\n";
    int n;
    cout << "Enter number of disks: ";
    cin >> n;
    towerOfHanoi(n, 'A', 'C', 'B');
    return 0;
}
